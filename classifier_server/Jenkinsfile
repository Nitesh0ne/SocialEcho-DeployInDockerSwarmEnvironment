pipeline {
     agent {
        label 'docker-swarm-manager'
    }
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        DOCKERHUB_USER = 'nitace'
    }
    stages {
        stage('Checkout') {
            steps {git branch: 'main', changelog: false, url: 'https://github.com/Nitesh0ne/SocialEcho-DeployInDockerSwarmEnvironment.git'}
        }
        stage('Build & Push classifier_server Image') {
            steps {
                dir('classifier_server') {
                
                    sh "docker build -t $DOCKERHUB_USER/classifier_server:latest ."
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        sh 'echo $PASS | docker login -u $USER --password-stdin'
                        sh "docker push $DOCKERHUB_USER/socialecho_client:latest"
                     
                    }
                }
            }
        }
    }
}
